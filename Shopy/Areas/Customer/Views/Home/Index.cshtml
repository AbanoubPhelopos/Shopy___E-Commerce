@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}
@if (Model != null)
{
    <div class=" pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-2">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@product.ImageURL" class="card-img-top rounded"/>
                            <div class="card-body pb-0">
                                <div class="p-lg-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                    <p class="card-title text-warning text-center"><b>@product.Auther</b></p>
                                </div>
                                <div class="p-lg-1">
                                    <p class="text-dark opacity-75 text-center">List Price : <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                                </div>
                                <div class="p-lg-1">
                                    <p class="text-dark opacity-75 text-center">As low as : <span>@product.Price100.ToString("c")</span></p>
                                </div>
                            </div>
                            <div>
                                <a href="#" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
<div class="text-center alert alert-warning" role="alert">
    There are no products.
</div>
}