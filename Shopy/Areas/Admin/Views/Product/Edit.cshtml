@model Product
@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="text-center col-12">
                <h1>Edit Product</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="container mt-5">
            <div asp-validation-summary="All"></div>
            <div class="mb-3 row">
                <label for="Name" class="col-sm-2 col-form-label">Name:</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Description" class="col-sm-2 col-form-label">Description:</label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="ListPrice" class="col-sm-2 col-form-label">List Price:</label>
                <div class="col-sm-10">
                    <input type="number" asp-for="ListPrice" class="form-control">
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="number" asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price50" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="number" asp-for="Price50" class="form-control">
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price100" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="number" asp-for="Price100" class="form-control">
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-outline-primary btn-lg mr-2">
                        <i class="bi bi-pencil-square"></i> Update
                    </button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to Category</a>
                </div>
            </div>
        </form>
    </div>
</div>