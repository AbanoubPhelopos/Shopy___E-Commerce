@{
    ViewData["Title"] = "Categories";
}
@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="text-center col-12">
                <h1>Products</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="mt-4 mb-4">
            <a class="btn btn-outline-primary btn-lg" asp-action="Upsert">
                <i class="bi bi-bookmark-plus-fill"></i> Add Product
            </a>
        </div>

        @if (Model == null || Model.Count == 0)
        {
            <div class="alert alert-warning" role="alert">
                There are no products.
            </div>
        }
        else
        {
            <table id="tblData" class="table table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Product Title</th>
                        <th>Auther</th>
                        <th>Price</th>
                        <th>List Price</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        }
    </div>
</div>

@section Scripts{
    <script src="~/js/Product.js"></script>
}