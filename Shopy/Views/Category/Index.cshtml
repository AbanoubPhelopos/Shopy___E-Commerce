@{
	ViewData["Title"] = "Category";
}
@model List<Category>

<a class="btn btn-outline-primary btn-lg mt-8" asp-action="Create">
	<i class="bi bi-bookmark-plus-fill"></i>
	Add Category
</a>
@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">There is no Category</h4>
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Display Order</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-secondary">

                @foreach (var item in Model)
                {
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" method="post">
                            <button type="button" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</button>
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="button" class="btn btn-outline-danger"><i class="bi bi-trash3"></i>Delete</button>
                        </a>
                    </td>
                }

            </tr>
        </tbody>
    </table>
}

