@{
	ViewData["Title"] = "Delete";
}
@model Category

<form method="post" class="container mt-5">

    <div class="form-group row mt-6">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" disabled class="form-control bg-secondary text-white">
        </div>
    </div>
    <div class="form-group row mt-4">
        <label asp-for="DisplayOrder" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DisplayOrder" disabled class="form-control bg-secondary text-white">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-outline-danger btn-lg mr-2 mt-4">
                <i class="bi bi-trash3"></i>
                Delete
            </button>

            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-lg mt-4">Back to Category</a>
        </div>
    </div>
</form>
